- title_str       = "#{@npa}-NXX Owner and Info Reverse Lookup Search"
- desc_str        = "Result for #{title_str} number owner information and reverse lookup search"
- keywords_str    = "#{@npa}, reverse lookup, owner, caller"
- page_title title_str
- page_meta_title title_str
- page_meta_description desc_str
- meta_tags do
  = meta_tag('keywords', keywords_str)

%div.hero-unit.ac{itemscope: true, itemtype: 'http://data-vocabulary.org/Review'}
  %h2{itemprop: 'itemreviewed'}
    Area Code #{@npa}
  %p{itemprop: 'summary'}
    Select the area code and exchange as reviewed by <span itemprop='reviewer'>NumberNote</span> below for reverse owner lookup search info.
    Rated <span itemprop='rating'>4.#{@npa[-2].to_i/2}</span>.

%ul.nav.nav-pills{itemprop: 'description'}
  - @nxx.each do |nxx_single|
    %li=link_to "#{@npa}-#{nxx_single}", index_line_path(npa: @npa, nxx: nxx_single)
