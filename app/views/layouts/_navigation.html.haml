.navbar
  .navbar-inner
    .container
      %a.btn.btn-navbar{:'data-toggle' => 'collapse', :'data-target' => '.nav-collapse'}
        .icon-bar
        .icon-bar
        .icon-bar
      %a.brand{href: root_path}
        %b='Number'
        Note
      - unless params[:action] == 'home'
        = form_tag(search_phonenumbers_path, method: :get, id: 'nav-search', class: 'navbar-form form-inline pull-left') do
          .input-append
            %input{type: 'tel', placeholder:'Search...', name: :number}
            %button.btn{type: :submit}
              Search
      .nav-collapse
        %ul.nav
          %li
            %a{href: root_path}= 'Home'
          %li
            %a{href: index_npa_path}= 'Area Codes'
          -if user_signed_in?
            %li
              = link_to('Sign out', destroy_user_session_path, method: :delete)
            %li
              = link_to('Account', edit_user_registration_path, method: :get)
            -if current_user.image
              %li
                %a#navbar-user-image
                  %img{src: current_user.image, class: 'thumbnail'}
          -else
            %li
              = link_to 'Sign in', new_user_session_path, method: :get
            %li
              %a#navbar-facebook-login.btn.btn-primary{title: true, href: user_omniauth_authorize_path(:facebook)}
                %b='Sign in with Facebook'
